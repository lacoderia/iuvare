<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Source name</th>
      <th>Source email</th>
      <th>Source text</th>
      <th>User</th>
      <th>Visible</th>
      <th>Request state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.source_name %></td>
        <td><%= request.source_email %></td>
        <td><%= request.source_text %></td>
        <td><%= request.user_id %></td>
        <td><%= request.visible %></td>
        <td><%= request.request_state_id %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
